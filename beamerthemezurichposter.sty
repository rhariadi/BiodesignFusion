% headline
\setbeamertemplate{headline}{  
  \leavevmode

  \begin{beamercolorbox}[wd=\paperwidth]{headline}
    \begin{columns}[T]
      \begin{column}{.635\linewidth}
        \vskip6ex
        \raggedleft
        \usebeamercolor{title in headline}{\color{fg}\textbf{\LARGE{\inserttitle}}\\[1ex]}
        \usebeamercolor{author in headline}{\color{fg}\large{\insertauthor}\\[1ex]}
        \usebeamercolor{institute in headline}{\color{fg}\normalsize{\insertinstitute}\\[1ex]}
                    \vskip0.5ex     
      \end{column}
      \begin{column}{.005\linewidth}
      \end{column}
      \begin{column}{.21\linewidth}
        \vskip10ex
        \begin{center}
          \includegraphics[width=.18\paperwidth]{UMHS}%{signature-stationery-white}
        \end{center}
        %\vskip1.5cm
      \end{column}
      \begin{column}{.145\linewidth}
      \end{column}
    \end{columns}
  \end{beamercolorbox}
  
  \begin{beamercolorbox}[wd=\paperwidth]{lower separation line head}
    \rule{0pt}{2pt}
  \end{beamercolorbox}
}


\setbeamertemplate{block begin}{
